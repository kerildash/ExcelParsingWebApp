@using ExcelParsingWebApp.Models.Domain;
@model List<Sheet>;

@{
}
<link rel='stylesheet' href='https://cdn-uicons.flaticon.com/2.1.0/uicons-regular-rounded/css/uicons-regular-rounded.css'>
<link rel='stylesheet' href='https://cdn-uicons.flaticon.com/2.1.0/uicons-regular-rounded/css/uicons-regular-rounded.css'>
<div class="friends-container">
	<h1>Список загруженных оборотно-сальдовых ведомостей</h1>
	<div class="flex-row-container">
		@foreach (var sheet in Model)
		{
			<div class="border friend-div flex-container flex-row-item">
				<div>

					<p class="friend-name friend-p">@sheet.SheetTitle</p>
					<p class="friend-place friend-p">@sheet.BankName</p>
					<p class="friend-place friend-p">@sheet.Date</p>
				</div>
				<div>

					<div>
						<input style="align-self: flex-start" class="btn border add-friend flex-row-item" type="button" value="Просмотреть ведомость" onclick="location.href='@Url.Action("Get", "Sheet", new { id = sheet.Id })'" />
					</div>
				</div>
			</div>
		}
		<input style="align-self: flex-start" class="btn border add-friend flex-row-item" type="button" value="Загрузить ОСВ" onclick="location.href='@Url.Action("Upload", "FileUpload")'" />
	</div>
</div>